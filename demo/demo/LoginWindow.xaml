<Window x:Class="demo.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:demo"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <StackPanel Margin="100">
            <Label>Логин</Label>
            <TextBox x:Name="loginBox" Height="30" Margin="5"></TextBox>
            <Label>Пароль</Label>
            <PasswordBox x:Name="passwordBox" Height="30" Margin="5"></PasswordBox>
            <Button Height="30" Margin="5" Click="Button_Click">Войти</Button>
        </StackPanel>
    </Grid>
</Window>
