<Window x:Class="demo.AddOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:demo"
        mc:Ignorable="d"
        Title="Добавление заявки" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label>Оборудование</Label>
            <ComboBox x:Name="objectBox"></ComboBox>
            <Label>Тип неисправности</Label>
            <ComboBox x:Name="typeBox"></ComboBox>
            <Label>Проблема</Label>
            <StackPanel Orientation="Horizontal">
                <TextBox Width="540" Height="200" x:Name="problemBox"></TextBox>
                <StackPanel>
                    <Image Height="180" x:Name="image" Width="200"></Image>

                    <Button Click="Button_Click_1">
                        Выбрать картнику
                    </Button>
                </StackPanel>
            </StackPanel>
            
            <Label>Исполнитель</Label>
            <ComboBox x:Name="ispBox"></ComboBox>
            <Button Height="40" Click="Button_Click">Отправить заявку</Button>
        </StackPanel>
    </Grid>
</Window>
